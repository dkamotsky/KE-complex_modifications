{
    "title": "Personal dkamotsky's PC-Style Shortcuts",
    "rules": [

	{
	    "description": "Map Opt-Tab to Command-Tab",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": { "key_code": "tab",
			      "modifiers": {
				  "mandatory": [ "option" ]
			      }			    			     
			    },
		    "to": [
			{
			    "key_code": "tab",
			    "modifiers": [ "left_command" ]
			}	    
		    ]
		}
	    ]
	},

	{
	    "description": "Map Command-D to Control-D",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": { "key_code": "d",
			      "modifiers": {
				  "mandatory": [ "command" ]
			      }
			    },
		    "to": [
			{
			    "key_code": "d",
			    "modifiers": [ "left_control" ]
			}	    
		    ]
		}
	    ]
	},

	{
	    "description": "Map Home to Command-Left NOT Emacs",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": { "key_code": "home" },
		    "to": [
			{
			    "key_code": "left_arrow",
			    "modifiers": [ "left_command" ]
			}	    
		    ],
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": ["^org.gnu.Emacs$"]
			}			
		    ]		  
		}
	    ]
	},


	{
	    "description": "Map End to Command-Right NOT Emacs",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": { "key_code": "end" },
		    "to": [
			{
			    "key_code": "right_arrow",
			    "modifiers": [ "left_command" ]
			}	    
		    ],
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": ["^org.gnu.Emacs$"]
			}
		    ]		  
		}
	    ]
	},

	{
	    "description": "Map Command-Home to fn-Left NOT Emacs",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": { "key_code": "home",
			      "modifiers": {
				  "mandatory": ["command"]
			      }			    
			    },
		    "to": [
			{
			    "key_code": "left_arrow",
			    "modifiers": [ "fn" ]
			}	    
		    ],
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": ["^org.gnu.Emacs$"]
			}			
		    ]		  
		}
	    ]
	},


	{
	    "description": "Map Command-End to fn-Right NOT Emacs",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": { "key_code": "end",
			      "modifiers": {
				  "mandatory": ["command"]
			      }			    
			    },
		    "to": [
			{
			    "key_code": "right_arrow",
			    "modifiers": [ "fn" ]
			}	    
		    ],
		    "conditions": [
			{
			    "type": "frontmost_application_unless",
			    "bundle_identifiers": ["^org.gnu.Emacs$"]
			}
		    ]		  
		}
	    ]
	},

	
	{
	    "description": "Map PrintScreen to Ctrl+Shift+Command+3 (whole screen to clipboard)",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": {
			"key_code": "print_screen"
		    },
		    "to": [
			{
			    "key_code": "3",
			    "modifiers": [
				"left_command",
				"left_shift",
				"left_control"
			    ]
			}
		    ]
		}
	    ]
	},

	
	{
	    "description": "Map Opt-PrintScreen to Ctrl+Shift+Command+4+Space (current window to clipboard)",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": {
			"key_code": "print_screen",
			"modifiers": {
			    "mandatory": ["option"]
			}			
		    },
		    "to": [
			{
			    "key_code": "4",
			    "modifiers": [
				"left_command",
				"left_shift",
				"left_control"
			    ]
			},
			{
			    "key_code": "spacebar"
			}			
		    ]
		}
	    ]
	},

	
	{
	    "description": "Map Command-PrintScreen to Ctrl+Shift+Command+4 (selection to clipboard)",
	    "manipulators": [
		{
		    "type": "basic",
		    "from": {
			"key_code": "print_screen",
			"modifiers": {
			    "mandatory": ["command"]
			}			
		    },
		    "to": [
			{
			    "key_code": "4",
			    "modifiers": [
				"left_command",
				"left_shift",
				"left_control"
			    ]
			}
		    ]
		}
	    ]
	}	
	
    ]
}
